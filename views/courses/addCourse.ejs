<%- include("../base/header.ejs")%>

    <style>
        h1 {
            margin-top: 4%;
        }
    </style>
    <h1>Add Course</h1>
    <form action="\courses\add" method="POST">
        <div class="form-group">
            <label for="">CourseName</label>
            <input required type="text" class="form-control" name="Coursename" id="Coursename" placeholder="Course name">
        </div>
        <div class="form-group">
            <label for="">Lecture Hours</label>
            <input type="number" class="form-control" name="lectureHours" id="lectureHours">
        </div>
        <div class="form-group">
            <label for="">Lab Hours</label>
            <input type="number" class="form-control" name="labHours" id="labHours">
        </div>
        <input type="submit" class="btn btn-success"  value="Add Course">
        <a href="/courses/list" class="btn btn-success">Courses List</a>


    </form>
    <%- include("../base/footer.ejs")%>