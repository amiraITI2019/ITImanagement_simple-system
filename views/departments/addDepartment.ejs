<%- include("../base/header.ejs")%>
    <style>
        h1 {
            margin-top: 4%;
        }
    </style>
    <h1>Add Department</h1>
    <form action="\departments\add" method="POST">
        <div class="form-group">
            <label for="">Department Name</label>
            <input required class="form-control" type="text" name="name" id="name">
        </div>
        <div class="form-group">
            <label for="manager">Manager</label>
            <select class="form-control" id="manager" name="manager">
                <option value="-1">Select Manager</option>

                    <%for (instructor of instructors){%>
                        <option value=<%=instructor['_id']%>><%=instructor['fullname']%></option>
                    <%}%>
            </select>
        </div>
        <input type="submit" class="btn btn-success"  value="Add Department">
        <a href="/departments/list" class="btn btn-success">Departments List</a>


    </form>
    <%- include("../base/footer.ejs")%>