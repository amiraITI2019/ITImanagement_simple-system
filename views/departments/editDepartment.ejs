<%- include("../base/header.ejs")%>
    <style>
        h1 {
            margin-top: 4%;
        }
    </style>
    <h1>Edit Department</h1>
    <form action="\departments\edit" method="POST">
        <div class="form-group">
            <label for="">Department Name</label>
            <input class="form-control" type="text" name="name" id="name" value="<%=department['name']%> " />
        </div>
        <div class="form-group">
            <label for="manager">Manager</label>
            <select class="form-control" id="manager" name="manager">
                <%for (instructor of instructors){%>
                    <%if(instructor["_id"]==department["manager"]){%>
                    <option selected=true><%=instructor["fullname"]%></option>
                    <%} else { %>
                        <option ><%=instructor["fullname"]%></option>


                <%}}%>
            </select>
        </div>
        <input type="submit" class="btn btn-success" style="margin-left: 40%;" value="Save Department">


    </form>
    <%- include("../base/footer.ejs")%>