<%- include("../base/header.ejs")%>
    <style>
        h1 {
            margin-top: 4%;
        }
    </style>
    <h1>Edit Department</h1>
    <form action="\departments\edit" method="POST">
        <input type="hidden" class="form-control" name="_id" id="_id" value="<%=department['_id']%>">

        <div class="form-group">
            <label for="">Department Name</label>
            <input required class="form-control" type="text" name="name" id="name" value="<%=department['name']%> " />
        </div>
        <div class="form-group">
            <label for="manager">Manager</label>
            <select class="form-control" id="manager" name="manager">
                <option value="-1">Select Manager</option>
                <%for (instructor of instructors){%>
                    <%if(instructor["_id"]==department["manager"]){%>
                    <option selected=true value=<%=instructor["_id"]%>><%=instructor["fullname"]%></option>
                    <%} else { %>
                        <option value=<%=instructor["_id"]%>><%=instructor["fullname"]%></option>


                <%}}%>
            </select>
        </div>
        <input type="submit" class="btn btn-success"  value="Save Department">
        <a href="/departments/list" class="btn btn-success">Departments List</a>


    </form>
    <%- include("../base/footer.ejs")%>