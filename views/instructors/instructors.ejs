<%- include("../base/header.ejs")%>
    <div class="container">
        <h1 style="text-align: center;">Instructors</h1>
        <a class="btn btn-success" style="    position: absolute;
        top: 10%;
        right: 3%;" href="\instructors\add">Add instructor</a>
        <table class="table table-striped table-secondary">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Instructor Name</th>
                    <th scope="col">Mobile</th>
                    <th scope="col">Department</th>
                </tr>
            </thead>
            <tbody>
                <% for (instructor of instructors){ %>
                    <tr id="<%=instructor['_id']%>">
                        <td>
                            <%=instructor["fullname"]%>
                        </td>
                        <td>
                            <%= instructor["mobile"]%>
                        </td>
                        <td>
                            <%= instructor["department"]["name"]%>
                        </td>
                        <td>
                            <a type="submit" href="edit?id=<%= instructor['_id']%>" class="btn btn-primary">edit</a>

                        </td>
                        <td>
                            <button onClick="remove(<%= instructor['_id'] %>)">delete</button>
                        </td>
                    </tr>
                    <%}%>



            </tbody>
        </table>

    </div>
    <script>
        function remove(id) {
            //$ajaxCode
            $.ajax({
                url: "http://localhost:8080/courses/delete/" + id,
                method: "POST",
                contentType: "application/json",
                data: JSON.stringify({
                    id
                }),
                dataType: "json",
                success: function(result) {
                    $("" + id + "").remove();
                    document.getElementById(id).remove();
                    window.location.reload();
                },
                error: function(error) {
                    console.log(error + "");
                }
            });

        }
    </script>
    <%- include('../base/footer.ejs')%>