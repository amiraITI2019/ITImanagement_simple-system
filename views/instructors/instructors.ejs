<%- include("../base/header.ejs")%>
    <div class="container">
        <h1 style="text-align: center;">Instructors</h1>
        <a class="btn btn-success" style="    position: absolute;
        top: 10%;
        right: 3%;" href="\instructors\add">Add instructor</a>
        <table class="table table-striped table-secondary">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Instructor Name</th>
                    <th scope="col">Mobile</th>
                    <th scope="col">Department</th>
                </tr>
            </thead>
            <tbody>
                <%index=1;%>
                <% for (instructor of instructors){ %>
                    <tr id="<%=instructor['_id']%>">
                        <td>
                            <%=index%>
                        </td>
                        <td>
                            <%=instructor["fullname"]%>
                        </td>
                        <td>
                            <%= instructor["mobile"]%>
                        </td>
                        <td>
                            <%if(instructor["department"]){%>
                            <%= instructor["department"]["name"]%>
                            <%}%>
                        </td>
                        <td>
                            <a type="submit" href="edit?id=<%= instructor['_id']%>" class="btn btn-primary">edit</a>

                        </td>
                        <td>
                            <form class="Delete" action="/instructors/delete" method="POST">
                                <input  type="hidden" name="_id" id="_id" value="<%=instructor['_id']%>">
                                <input type="submit"  class=" btn btn-danger" value="Delete"></input>
                            </form>
                        </td>
                    </tr>
                    <%index+=1;%>
                    <%}%>



            </tbody>
        </table>

    </div>
    
    <%- include('../base/footer.ejs')%>